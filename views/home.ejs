<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head.ejs') %>
  <body>
    <ul id="products">
      <% if (products.length > 0) { %> 
        <% products.forEach(element => { %> 
            <%- include ('./partials/product.ejs',element) %> 
        <% }) %> 
      <% } %>
    </ul>
    <% if (cart && cart.length>0) { %>
        <ul id="cart">
            <% cart.forEach(element => { %> 
                <%- include ('./partials/item.ejs',element) %> 
            <% }) %> 
        </ul>
        <form action="/checkout/process" method="post"><button type="submit">checkout</button></form>
    <% } else { %>
      <section id="cart">
          <h2>No hay productos</h2>
      </section>
    <% } %>
  </body>
</html>
